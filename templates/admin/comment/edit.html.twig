{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un commentaire{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification d'un commentaire</h1>
        <div class="alert alert-info">
                <strong>ID :</strong> {{ comment.id }} <br>
                <strong>Annonce :</strong> {{ comment.ad.title }} <br>
                <strong>Auteur :</strong> {{ comment.author.fullName }} <br>
                <strong>Date de création :</strong> {{ comment.createdAt|date('d/m/Y H:i') }} <br>
                <strong>Note donnée :</strong> {{ comment.rating }}
        </div>
        
        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check"></i> &nbsp;
            Enregistrer les modifications
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}