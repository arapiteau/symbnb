{% extends 'base.html.twig' %}

{% block title %}Modifier votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modifier votre mot de passe</h1>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary float-right">
            <i class="fas fa-check"></i>&nbsp;
            Modifier
        </button>
        {{ form_end(form) }}
    </div>
    
{% endblock %}